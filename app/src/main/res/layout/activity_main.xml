<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:minHeight="100dp" />

        <Button
            android:id="@+id/btnSaveInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存Int" />

        <Button
            android:id="@+id/btnGetInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取Int" />

        <Button
            android:id="@+id/btnSaveDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存Double" />

        <Button
            android:id="@+id/btnGetDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取Double" />

        <Button
            android:id="@+id/btnSaveBitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存Bitmap" />

        <Button
            android:id="@+id/btnGetBitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取Bitmap" />

        <Button
            android:id="@+id/btnSaveJSONArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存JSONArray" />

        <Button
            android:id="@+id/btnGetJSONArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取JSONArray" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>